<div class = "page-title">
	<h1>Eat-Da-Burger</h1>
</div>

<div class = "main-content">
	<div class = "add-burger">
		<h2>Add your favorite burger:</h2>
		<!-- <div class="container"> -->
		<!-- <div class="row"> -->
		<!-- <div class="col-xs-12 text-center enter_section"> -->
		<form action="/burgers/create" method="POST">
			<input type="text" class="form-control" name="burger_name" value="" id="enter_text">
			<button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
		</form>
		<!-- </div>
	</div>
</div> -->
</div>

<div class = "secondary-content">
	<div class = "row">

			<div class = "delicious-burgers">
				<h3>Delicious Burgers</h3>
				<ul>
					{{#each burgers}}
					{{#unless devoured}}
					<li>
						<p><span class="label"></span>{{this.burger_name}}</p>
						<form class="devour-form button-size" id="devour-button">
							<input input type="hidden" class="burger_id" type="text" value={{this.id}}>
							<button type="submit" class="btn btn-default">Devour it!</button>
						</form><br>
					</li>
					{{/unless}}
					{{/each}}
				</ul>
			</div>

			<div class = "devoured-burgers">
				<h3>Devoured Burgers</h3>
				<ul>
					{{#each burgers}}
					{{#if devoured}}
					<li>
						<p><span class="label"></span> {{this.burger_name}}</p>
					</li>
					{{/if}}
					{{/each}}
				</ul>
			</div>
		</div>

</div>
</div>
